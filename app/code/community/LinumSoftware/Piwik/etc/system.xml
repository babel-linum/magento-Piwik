<config>
  <sections>
    <piwik translate="label" >
      <label>Piwik</label>
      <tab>linumsoftware_about</tab>
      <sort_order>807387</sort_order>
      <frontend_type>text</frontend_type>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
	<piwik translate="label">
	  <label>Piwikeinbindung</label>
	  <frontend_type>text</frontend_type>
	  <sort_order>100</sort_order>
	  <show_in_default>1</show_in_default>
	  <show_in_website>1</show_in_website>
	  <show_in_store>1</show_in_store>
	  <fields>
	    <enabled translate="label">
	      <label>Tracking aktivieren</label>
	      <comment><![CDATA[- <b>Enable</b> Piwik tracking in the frontend? <br /> - Piwikeinbindung im Frontend <b>einschalten</b>?]]></comment>
	      <frontend_type>select</frontend_type>
	      <source_model>adminhtml/system_config_source_yesno</source_model>
	      <sort_order>1000</sort_order>
	      <show_in_default>1</show_in_default>
	      <show_in_website>1</show_in_website>
	      <show_in_store>1</show_in_store>
	    </enabled>
	    <siteid translate="label">
	      <label>Site ID</label>
	      <comment><![CDATA[- Die Seitenkennung (Site ID) Ihrer Piwikkonfiguration fÃ¼r diese Webseite.]]></comment>
	      <frontend_type>text</frontend_type>
	      <validate>validate-number maximum-length-6</validate>
	      <sort_order>1100</sort_order>
	      <show_in_default>1</show_in_default>
	      <show_in_website>1</show_in_website>
	      <show_in_store>1</show_in_store>
	    </siteid>
	    <piwikurl translate="label">
	      <label>Tracker URL</label>
	      <comment><![CDATA[- Die URL Ihrer Piwikinstallation.]]></comment>
	      <frontend_type>text</frontend_type>
	      <validate>validate-url</validate>
	      <sort_order>1200</sort_order>
	      <show_in_default>1</show_in_default>
	      <show_in_website>1</show_in_website>
	      <show_in_store>1</show_in_store>
	    </piwikurl>
	    <authcode translate="label">
	      <label>Authcode</label>
	      <comment><![CDATA[- Den Authentifizierungcode Ihrer Piwikinstallation. Sie finden Ihn unter Einstellungen -> API -> Benutzerauthentifizierung]]></comment>
	      <frontend_type>text</frontend_type>
	      <validate>validate-alphanum</validate>
	      <sort_order>1300</sort_order>
	      <show_in_default>1</show_in_default>
	      <show_in_website>1</show_in_website>
	      <show_in_store>1</show_in_store>
	    </authcode>
	    <debuglog translate="label">
	      <label>Tracking aktivieren</label>
	      <comment><![CDATA[- Debuglogfile in var/log/piwik.log mitschreiben?]]></comment>
	      <frontend_type>select</frontend_type>
	      <source_model>adminhtml/system_config_source_yesno</source_model>
	      <sort_order>1400</sort_order>
	      <show_in_default>1</show_in_default>
	      <show_in_website>1</show_in_website>
	      <show_in_store>1</show_in_store>
	    </debuglog>						
	  </fields>
	</piwik>
      </groups>
    </piwik>
  </sections>
</config>
